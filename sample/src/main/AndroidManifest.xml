<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hyfun.animation">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.transition.NetEaseSlideActivity"
            android:theme="@style/AppTheme.SlideTheme" />
        <activity
            android:name=".ui.transition.NetEaseScaleActivity"
            android:theme="@style/AppTheme.ScaleTheme" />
        <activity android:name=".ui.transition.TransitionAnimationActivity" />
        <activity android:name=".ui.reveal.RevealEffectActivity" />
        <activity
            android:name=".ui.ripple.RippleDefaultColorActivity"
            android:theme="@style/AppTheme.RippleDefaultColor" />
        <activity android:name=".ui.ripple.RippleEffectActivity" />
        <activity android:name=".ui.property.ObjectAnimationActivity" />
        <activity android:name=".ui.property.ValueAnimationActivity" />
        <activity android:name=".ui.property.PropertyAnimationActivity" />
        <activity android:name=".ui.drawable.DrawableAnimationActivity" />
        <activity android:name=".ui.tween.InterpolatorActivity" />
        <activity android:name=".ui.tween.AnimationSetActivity" />
        <activity android:name=".ui.tween.TranslateAnimationActivity" />
        <activity android:name=".ui.tween.ScaleAnimationActivity" />
        <activity android:name=".ui.tween.RotateAnimationActivity" />
        <activity android:name=".ui.tween.AlphaAnimationActivity" />
        <activity android:name=".ui.tween.TweenAnimationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>