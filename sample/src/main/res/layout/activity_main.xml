<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/main_image"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16sp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewAnimation"
                android:text="View Animation / 视图动画" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewDrawable"
                android:text="Drawable Animation / 帧动画 / Frame 动画" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewProperty"
                android:text="Property Animation / 属性动画" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewRipple"
                android:text="Ripple Effect / Touch Feedback / 触摸反馈动画(Android 5.0+)" />


            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewReveal"
                android:text="Reveal Effect / 揭露动画(Android 5.0+)" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="viewTransition"
                android:text="Transition Animation / 转场动画、共享元素" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>